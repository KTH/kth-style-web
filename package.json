{
  "//": "JSHint configuration - http://jshint.com/docs/options/",
  "name": "kth-style-web",
  "version": "3.0.0",
  "description": "Template project for a node express web server",
  "main": "app.js",
  "private": true,
  "license": "MIT",
  "author": "KTH",
  "repository": {
    "type": "git",
    "uri": "https://github.com/KTH/kth-style-web"
  },
  "scripts": {
    "vendor": "parcel build  ./public/js/vendor.js  --public-url /style/static",
    "test": "is-ci \"test:jest\" \"test:watch\"",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:mocha": "NODE_ENV=development mocha --exit test/unit/*.js",
    "docker": "npm install --development && npm run build && npm prune --production",
    "build": "NODE_ENV=production npm run move-handlebar-pages && rm -rf dist && parcel build --public-url /style/static ./public/js/app/app.jsx && npm run vendor --preserve-comments",
    "build-dev": "cross-env NODE_ENV=development npm run move-handlebar-pages && rm -rf dist && parcel build ./public/js/vendor.js --public-url /style/static && parcel watch ./public/js/app/app.jsx --public-url /style/static",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development concurrently --kill-others \"npm run build-dev\" \"nodemon --ignore dist/ --ignore public/ app.js\"",
    "move-handlebar-pages": "cp ./node_modules/kth-node-web-common/lib/handlebars/pages/views/error.handlebars ./server/views/system && cp ./node_modules/kth-node-web-common/lib/handlebars/pages/layouts/errorLayout.handlebars ./server/views/layouts"
  },
  "dependencies": {
    "applicationinsights": "^1.7.5",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.4.1",
    "component-registry": "^1.3.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.4",
    "jquery": "3.5.1",
    "kth-node-access-log": "^0.2.0",
    "kth-node-api-call": "^3.0.11",
    "kth-node-configuration": "^2.0.1",
    "kth-node-express-routing": "^2.0.3",
    "kth-node-i18n": "^1.0.2",
    "kth-node-ldap": "^3.1.1",
    "kth-node-log": "^3.1.0",
    "kth-node-monitor": "^1.1.3",
    "kth-node-passport-cas": "^3.1.11",
    "kth-node-redis": "^3.1.4",
    "kth-node-server": "^3.1.2",
    "kth-node-session": "^1.0.4",
    "kth-node-web-common": "^5.1.1",
    "kth-style": "^5.0.15",
    "locale": "^0.1.0",
    "mobx": "^5.13.0",
    "mobx-react": "^5.4.4",
    "passport": "^0.4.1",
    "popper.js": "^1.16.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "safe-utils": "^0.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-decorators": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-react": "7.10.1",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.2.5",
    "is-ci-cli": "^2.0.0",
    "jest": "^26.0.1",
    "jest-axe": "^3.4.0",
    "jest-emotion": "^10.0.32",
    "merge-stream": "^2.0.0",
    "mocha": "7.1.2",
    "mockery": "^2.1.0",
    "nock": "^12.0.3",
    "node-mocks-http": "^1.8.1",
    "nodemon": "^1.19.4",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react-test-renderer": "^16.11.0",
    "sass": "^1.26.5",
    "zombie": "6.1.4"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "arrowParens": "avoid"
  },
  "engines": {
    "node": "12.0.0"
  },
  "jshintConfig": {
    "maxerr": 5
  },
  "husky": {
    "hooks": {
      "pre-push": "CI=1 npm run test",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
